{
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "isolatedModules": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
}
